{
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJS",
        "lib": ["ESNext", "DOM"],
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true, // dont look archives with .d.ts on the build
        "forceConsistentCasingInFileNames": true,
    },

    "include": [
        "./src"
    ]
}